/** Mobile version **/

@media screen and (max-width: 1790px)

    .burger-menu
        display: block
        position fixed
        z-index 999
        width 70vw
        background rgba(0, 0, 0, 0.808)
        opacity 1
        top 0
        right 0
        bottom 0
        transform: translateX(70vw)
        transition transform 0.4s ease

        &__content
            display block
            padding 1rem

        &__control
            display block
            z-index 998
            width 2.5rem
            height 2.5rem
            position absolute
            left -2.9rem
            top 1.9rem
            background: url('../images/icons/burger.svg') no-repeat center center;
            background-size contain
            border none
            cursor: pointer;
            transition: opacity 0.3s ease

            &:hover
                opacity 0.6

    .burger-menu_opened
        transform: translateX(0)

    .body_burger-opened
        overflow: hidden

        .burger-menu__control
            background: url('../images/icons/x.svg') no-repeat center center;
            background-size contain

    .modal_active
        display: block;
        position fixed
        top 0
        left 0
        right 0
        bottom 0
        background: rgba(0,0,0,0.5)
        z-index 900

    .main-nav
        display block

        &__list
            display block

        &__link
            display block
            width 100%
            text-align center
            transition 0.4s all
            padding: 1rem 0

            &:hover,
            &_active
                background rgba(255, 255, 255, 0.708)
                color black
                opacity 1


    .search
        margin-top 3rem





@media screen and (max-width: 1790px)
    html,
    body
        font-size: 16px

    .section-col
        &:first-child
            width 40%
        &:last-child
            width 50%

    .content
        max-width 1200px

@media screen and (max-width: 1550px)
    html,
    body
        font-size: 14px

@media screen and (max-width: 1380px)
    .section-col
        &:first-child
            width 43%
        &:last-child
            width 50%

    .content
        max-width 1200px

@media screen and (max-width: 1310px)
    .main-title
        font-size: 0.9rem